@model IEnumerable<Repas.Models.DateForniture>

@{
    ViewData["Title"] = "Index";
}
<div class="div-content border border-light-subtle mb-3">
    <div id="calendar" data-provide="calendar"></div>
</div>
<p>
    <a class="btn btn-primary" asp-action="Create">Nouveau jour</a>
</p>
<div class="div-content border border-light-subtle">
    <h3>Forniture par date</h3>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>
                    Date
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
    @foreach (var item in Model) {
                <tr>
                    <td>
                        <strong>@item.FornitureDate.ToString("dd/MM/yyyy")</strong>
                </td>
                <td>
                        <a>Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
    }
        </tbody>
    </table>
</div>


<div id ="myModal" class="modal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Modal title</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>



